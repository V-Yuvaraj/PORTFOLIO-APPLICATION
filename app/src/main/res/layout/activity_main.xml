<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/editTextText"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/black"
        android:ems="10"
        android:inputType="text"
        android:text="Portfolio"
        android:padding="3dp"
        android:textAlignment="center"
        android:textColor="@color/material_dynamic_tertiary100"
        android:textSize="60dp" />


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">




        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="YUVARAJ V"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/grey"
            android:textAlignment="center"
            android:textSize="40dp" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textColor="@color/grey"


            android:text="Software Developer"
            android:textAlignment="center"
            android:textSize="20dp" />


        <Button
            android:id="@+id/buttonresume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/defaultbutton"
            android:backgroundTint="@color/violet"
            android:textColor="@color/white"
            android:text="view resume" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/yuva" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/sandal"

            android:layout_marginTop="35dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textStyle="italic"


            android:text="Motivated and enthusiastic student pursuing a degree in B.E COMPUTER SCIENCE. Eager to apply my skills and knowledge in a real-world setting and continue learning and growing in the IT industry." />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:padding="20dp">

        <Button
            android:id="@+id/buttonskills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/defaultbutton"
            android:backgroundTint="@color/violet"
            android:textColor="@color/white"



            android:layout_weight="1"
            android:text="SKILLS"

            />

        <Button
            android:id="@+id/buttonprojects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:background="@drawable/defaultbutton"
            android:backgroundTint="@color/violet"
            android:textColor="@color/white"
            android:text="PROJECTS" />

        <Button
            android:id="@+id/buttoninternship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/defaultbutton"
            android:backgroundTint="@color/violet"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:text="INTERNSHIP" />

        <Button
            android:id="@+id/buttoncontact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:background="@drawable/defaultbutton"
            android:backgroundTint="@color/violet"
            android:textColor="@color/white"
            android:text="CONTACT" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="Made With Love By Yuvaraj"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textAlignment="center" />
    </LinearLayout>

    </LinearLayout>

</ScrollView>





