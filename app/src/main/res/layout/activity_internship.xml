<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InternshipActivity"
    android:id="@+id/main"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/editTextText"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/black"
            android:ems="10"
            android:inputType="text"
            android:padding="3dp"
            android:text="Portfolio"
            android:textAlignment="center"
            android:textColor="@color/material_dynamic_tertiary100"
            android:textSize="60dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:layout_margin="10dp"
            android:text="INTERNSHIPS"
            android:fontFamily="sans-serif-black"
            android:textAlignment="center"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/intern1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:layout_margin="10dp"
            android:text="1 .Pyroferus technologies "
            android:fontFamily="sans-serif-black"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/pyroferusicon" />

        <TextView
            android:id="@+id/role1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="ROLE : Software Tester"
            android:textColor="@color/grey"
            android:fontFamily="sans-serif-black"
            android:textAlignment="center"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="DURATION : 1 Month"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/grey"
            android:textAlignment="center"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text=" 26-6-2023 to 25-7-2023"
            android:textColor="@color/grey"
            android:textAlignment="center"
            android:fontFamily="sans-serif-black"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/oasisinfobyte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text=" 2.Oasis Infobyte  "
            android:fontFamily="sans-serif-black"
            android:textColor="@color/grey"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/imageViewoasis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/oasisicon" />

        <TextView
            android:id="@+id/role2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text=" ROLE : java developer"
            android:textColor="@color/grey"

            android:textAlignment="center"
            android:fontFamily="sans-serif-black"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/duration2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text=" DURATION : 1 Month"
            android:textAlignment="center"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/grey"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:text=" Made with love by yuvaraj"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:fontFamily="sans-serif-black"
            android:paddingTop="6dp"
            android:textSize="20dp" />

    </LinearLayout>

</ScrollView>




